<nav id="navbar" class="navbar">
  <div class="nav-items">
    <span class="material-symbols-outlined">menu</span>
    <a href="/">Home</a>
    <a href="/about">About</a>
    <a href="/contact">Contact Us</a>
    <% if (user) { %>
      <a href="/apply" class="apply">Apply Now</a>
